@import '../common/theme/global.wxss';

@keyframes Snake {
  0% {
    -webkit-transform: rotate(0);
  }

  50% {
    -webkit-transform: rotate(180deg);
  }

  100% {
    -webkit-transform: rotate(360deg);
  }
}

@-webkit-keyframes Snake {
  0% {
    -webkit-transform: rotate(0);
  }

  50% {
    -webkit-transform: rotate(180deg);
  }

  100% {
    -webkit-transform: rotate(360deg);
  }
}

.animation-snake {
  border-radius: 50%;
  border: 2px #fff solid;
  border-bottom-color: transparent;
  background: transparent;
  animation: Snake 1s 0.23s linear infinite;
  -webkit-animation: Snake 1s 0.23s linear infinite;
}

.animation-snake-size-small {
  width: 20px;
  height: 20px;
}

.animation-snake-size-default {
  width: 30px;
  height: 30px;
}

.animation-snake-size-larger {
  width: 45px;
  height: 45px;
}

@keyframes diffusion {
  0% {
    -webkit-transform: scale(0.1);
    opacity: 1;
  }

  50% {
    -webkit-transform: scale(1);
    opacity: 0.5;
  }

  100% {
    -webkit-transform: scale(1.5);
    opacity: 0.1;
  }
}

@-webkit-keyframes diffusion {
  0% {
    -webkit-transform: scale(0.1);
    opacity: 1;
  }

  50% {
    -webkit-transform: scale(1);
    opacity: 0.5;
  }

  100% {
    -webkit-transform: scale(1.5);
    opacity: 0.1;
  }
}

.animation-diffusion {
  border-radius: 50%;
  background: #fff;
  animation: diffusion 1s 0.23s linear infinite;
  -webkit-animation: diffusion 1s 0.23s linear infinite;
}

.animation-diffusion-size-small {
  width: 30px;
  height: 30px;
}

.animation-diffusion-size-default {
  width: 40px;
  height: 40px;
}

.animation-diffusion-size-larger {
  width: 55px;
  height: 55px;
}

@keyframes ball {
  0% {
    -webkit-transform: scale(1);
    opacity: 1;
  }

  50% {
    -webkit-transform: scale(0.5);
    opacity: 0.5;
  }

  100% {
    -webkit-transform: scale(1);
    opacity: 1;
  }
}

@-webkit-keyframes ball {
  0% {
    -webkit-transform: scale(1);
    opacity: 1;
  }

  50% {
    -webkit-transform: scale(0.5);
    opacity: 0.5;
  }

  100% {
    -webkit-transform: scale(1);
    opacity: 1;
  }
}

.animation-ball {
  display: block;
  white-space: nowrap;
}

.animation-ball .animationClass-view {
  display: inline-block;
  width: 20px;
  height: 20px;
  background: #fff;
  border-radius: 50%;
}

.animation-ball .animationClass-view:nth-child(1) {
  animation: ball 1s -0.5s linear infinite;
  -webkit-animation: ball 1s -0.5s linear infinite;
}

.animation-ball .animationClass-view:nth-child(2) {
  animation: ball 1s -0.25s linear infinite;
  -webkit-animation: ball 1s -0.25s linear infinite;
}

.animation-ball .animationClass-view:nth-child(3) {
  animation: ball 1s 0s linear infinite;
  -webkit-animation: ball 1s 0s linear infinite;
}

.animation-ball-size-small .animationClass-view {
  width: 20px;
  height: 20px;
}

.animation-ball-size-default .animationClass-view {
  width: 30px;
  height: 30px;
}

.animation-ball-size-larger .animationClass-view {
  width: 45px;
  height: 45px;
}

@keyframes catapult {
  0% {
    -webkit-transform: scale(1, 0.3);
  }

  100% {
    -webkit-transform: scale(1, 1);
  }
}

@-webkit-keyframes catapult {
  0% {
    -webkit-transform: scale(1, 0.3);
  }

  100% {
    -webkit-transform: scale(1, 1);
  }
}

.animation-catapult {
  display: block;
  white-space: nowrap;
}

.animation-catapult .animationClass-view {
  width: 5px;
  height: 35px;
  background: #fff;
  border-radius: 2px;
  margin-right: 4px;
  display: inline-block;
}

.animation-catapult .animationClass-view:last-child {
  margin-right: 0;
}

.animation-catapult .animationClass-view:nth-child(1) {
  animation: catapult 0.5s -0.3s ease-in-out infinite alternate;
  -webkit-animation: catapult 0.5s -0.3s ease-in-out infinite alternate;
}

.animation-catapult .animationClass-view:nth-child(2) {
  animation: catapult 0.5s -0.25s ease-in-out infinite alternate;
  -webkit-animation: catapult 0.5s -0.25s ease-in-out infinite alternate;
}

.animation-catapult .animationClass-view:nth-child(3) {
  animation: catapult 0.5s -0.2s ease-in-out infinite alternate;
  -webkit-animation: catapult 0.5s -0.2s ease-in-out infinite alternate;
}

.animation-catapult .animationClass-view:nth-child(4) {
  animation: catapult 0.5s -0.1s ease-in-out infinite alternate;
  -webkit-animation: catapult 0.5s -0.1s ease-in-out infinite alternate;
}

.animation-catapult .animationClass-view:nth-child(5) {
  animation: catapult 0.5s 0s ease-in-out infinite alternate;
  -webkit-animation: catapult 0.5s 0s ease-in-out infinite alternate;
}

.animation-catapult-size-small .animationClass-view {
  width: 3px;
  height: 25px;
}

.animation-catapult-size-default .animationClass-view {
  width: 5px;
  height: 35px;
}

.animation-catapult-size-larger .animationClass-view {
  width: 8px;
  height: 48px;
}

