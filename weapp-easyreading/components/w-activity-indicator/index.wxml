<view wx:if="{{ type === 'snake' }}" class="wuss-class wuss-activity-indicator-block {{ text ? 'flex-content' : ''}}" >
	<view class="wuss-activity-indicator animation-snake {{ animationClass }}" style="{{ animationStyles }}" />
	<view class="wuss-activity-indicator-text" wx:if="{{ text }}" style="{{ textStyle }}" >
		{{ text }}
	</view>
</view>

