<scroll-view scroll-y="true" class="mp-swipe-card-item">
  <view bind:tap="handleTap" class="id-text">{{itemData.title}}</view>

    <view class='feed-tail'>

        <view class="art-more">

            <view class="left">
                <view class="art-tag">
                    <text class="tag">tag1</text>
                    <text class="tag">tag2</text>
                </view>
            </view>

            <view class="right">
                <view class="book">
                    <image src="../../../../images/book.png"></image>
                    <text>500ËØç </text>
                </view>
                <view class="watch">
                    <image src="../../../../images/eye.png"></image>
                    <text>3316</text>
                </view>
                <view class="comment">
                    <image src="../../../../images/star.png"></image>
                    <text>27  </text>
                </view>
            </view>

        </view>

    </view>

    <view class="feed-content">
            <view class="avatar flex-item">
                       <image src="{{itemData.picUrl}}"></image>
                  </view>

                <view class="answer-body" bindtap="bindItemTap">
                    <a class="">
                       {{itemData.content}}
                        </a>

                </view>
</view>

</scroll-view>
