.arrange{
    display: flex;
    margin-left: 10px;
    margin-right: 10px;
    font-size: 15px;
    flex-direction:row;
    width: 350px;
    flex-wrap: wrap;
    word-wrap:break-word;
    text-justify: auto;
  }
  
  .hover{
    background-color: rgb(116, 171, 30);
  }
  
  .modalDlg{
      width: 100%;
      height: 30%;
      position: fixed;
      top: 60%;
      background-color: rgb(253, 253, 253);
      display: flex;
      flex-direction: row;
    
  }
  
  .result{
    width: 100%;
    margin-left: 10px;
    margin-top: 10px;
    height: 100%;
    display: flex;
    flex-direction: column;
  }
  
  .head_arrange{
    display: flex;
    flex-direction: row;
  }
  
  .wordtext{
    font-size: 25px;
    margin: 10px;
  }
  
  .phonetic{
    margin-left: 10px;
    font-size: 13px;
    color: gray;
  }
  
  .paraphrase_box{
    width: 100%;
    top: 60%;
    height: 40%;
    text-overflow:ellipsis;
    overflow:hidden;
  }
  
  
  .paraphrase{
    font-size: 16px;
    margin-top: 5px;
    margin-left: 10px;
    margin-bottom: 2px;
    width: 100%;
  }
  
  .close_icon{
    display: flex;
    flex-direction: row-reverse;
    width:100%;
    top: 55%;
    height: 5%;
    position: fixed;
  }
  
  .operations{
    display: flex;
    flex-direction: row;
    width:100%;
    top: 90%;
    height: 10%;
    position: fixed;
    background-color: rgb(253, 253, 253);
    color: rgb(116, 171, 30);
  }